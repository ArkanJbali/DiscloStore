<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_store_info">


    <RelativeLayout
        android:layout_below="@+id/app_bar"
        android:id="@+id/header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img"
            android:layout_width="match_parent"
            android:layout_height="190dp"
            android:src="@drawable/hm"
            android:scaleType="fitXY"/>
        <EditText
            android:layout_marginLeft="15dp"
            android:layout_below="@+id/img"
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Header"
            android:textColor="@color/white"
            android:textSize="30sp"
            app:fontFamily="casual"
            />
    </RelativeLayout>


    <GridLayout
        android:id="@+id/cards"
        android:layout_below="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="1"
        android:rowCount="5"
        android:alignmentMode="alignMargins"
        android:columnOrderPreserved="false"
        android:padding="15dp">
        <android.support.v7.widget.CardView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_marginBottom="5dp"
            app:cardElevation="8dp"
            app:cardCornerRadius="8dp"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_store_infoo"
                >

                <ImageView
                    android:layout_marginLeft="5dp"
                    android:contentDescription="@string/img"
                    android:id="@+id/aboutImg"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/about_c"
                    />

                <TextView
                    android:id="@+id/about"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="About"
                    android:textColor="@android:color/white"
                    app:fontFamily="casual"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_toRightOf="@+id/aboutImg"
                    android:layout_toEndOf="@+id/aboutImg"/>
                <EditText
                    android:id="@+id/abouts"
                    android:layout_below="@+id/about"
                    android:layout_marginLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                   android:hint="Here"
                    android:textColor="@android:color/white"
                    app:fontFamily="casual"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:layout_toRightOf="@+id/aboutImg"
                    android:layout_toEndOf="@+id/aboutImg"/>


            </RelativeLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_marginBottom="5dp"
            app:cardElevation="8dp"
            app:cardCornerRadius="8dp"
            >
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_store_infoo"
                >

                <ImageView
                    android:layout_marginLeft="5dp"
                    android:contentDescription="@string/img"
                    android:id="@+id/calenderImg"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/date_c"
                    />

                <TextView
                    android:id="@+id/open"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Open"
                    android:textColor="@android:color/white"
                    app:fontFamily="casual"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_toRightOf="@+id/calenderImg"
                    android:layout_toEndOf="@+id/calenderImg"/>
                <EditText
                    android:id="@+id/opens"
                    android:layout_below="@+id/open"
                    android:layout_marginLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Here"
                    android:textColor="@android:color/white"
                    app:fontFamily="casual"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:layout_toRightOf="@+id/calenderImg"
                    android:layout_toEndOf="@+id/calenderImg"/>

            </RelativeLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_marginBottom="5dp"
            app:cardElevation="8dp"
            app:cardCornerRadius="8dp"
            >
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_store_infoo"
                >

                <ImageView
                    android:layout_marginLeft="5dp"
                    android:contentDescription="@string/img"
                    android:id="@+id/contactImg"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/contact_c"
                    />

                <TextView
                    android:id="@+id/contact"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Contact"
                    android:textColor="@android:color/white"
                    app:fontFamily="casual"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_toRightOf="@+id/contactImg"
                    android:layout_toEndOf="@+id/contactImg"/>
                <EditText
                    android:id="@+id/contacts"
                    android:layout_below="@+id/contact"
                    android:layout_marginLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Here"
                    android:textColor="@android:color/white"
                    app:fontFamily="casual"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:layout_toRightOf="@+id/contactImg"
                    android:layout_toEndOf="@+id/contactImg"/>



            </RelativeLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_marginBottom="5dp"
            app:cardElevation="8dp"
            app:cardCornerRadius="8dp"
            >
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_store_infoo"
                >

                <ImageView
                    android:id="@+id/locationImg"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/location_c"
                    android:contentDescription="@string/img" />

                <TextView
                    android:id="@+id/loc"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Location"
                    android:textColor="@android:color/white"
                    app:fontFamily="casual"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_toRightOf="@+id/locationImg"
                    android:layout_toEndOf="@+id/locationImg"/>
                <EditText
                    android:id="@+id/location"
                    android:layout_below="@+id/loc"
                    android:layout_marginLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Here"
                    android:textColor="@android:color/white"
                    app:fontFamily="casual"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:layout_toRightOf="@+id/locationImg"
                    android:layout_toEndOf="@+id/locationImg"/>

            </RelativeLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_marginBottom="5dp"
            app:cardElevation="8dp"
            app:cardCornerRadius="8dp"
            >
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_store_infoo"
                >

                <ImageView
                    android:layout_marginLeft="5dp"
                    android:contentDescription="@string/img"
                    android:id="@+id/websiteImg"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/website_c"
                    />

                <TextView
                    android:id="@+id/web"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Website"
                    android:textColor="@android:color/white"
                    app:fontFamily="casual"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_toRightOf="@+id/websiteImg"
                    android:layout_toEndOf="@+id/websiteImg"/>
                <EditText
                    android:id="@+id/website"
                    android:layout_below="@+id/web"
                    android:layout_marginLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Here"
                    android:textColor="@android:color/white"
                    app:fontFamily="casual"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:layout_toRightOf="@+id/websiteImg"
                    android:layout_toEndOf="@+id/websiteImg"/>

            </RelativeLayout>
        </android.support.v7.widget.CardView>
<android.support.v7.widget.CardView
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:layout_columnWeight="1"
    android:layout_rowWeight="1"
    android:layout_marginBottom="5dp"
    app:cardElevation="8dp"
    app:cardCornerRadius="8dp"
    >
    <RelativeLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_store_infoo"
        >
    <Button
        android:id="@+id/confirm"
        android:layout_marginTop="10dp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:fontFamily="casual"
        android:textColor="@color/white"
        android:background="@drawable/btn_bg"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        />
    </RelativeLayout>
</android.support.v7.widget.CardView>
    </GridLayout>
    <ImageView
        android:id="@+id/backBTN"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/blue_back_ic" />
</RelativeLayout>